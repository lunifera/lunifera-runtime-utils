<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.lunifera.releng.maven</groupId>
		<artifactId>org.lunifera.releng.maven.parent.mbp.aggregator</artifactId>
		<version>0.7.2-SNAPSHOT</version>
		<relativePath />
	</parent>

	<groupId>org.lunifera.runtime</groupId>
	<artifactId>org.lunifera.runtime.utils.aggregator</artifactId>
	<name>Lunifera Subsystems - Runtime Utilities Projects</name>
	<description>A group of projects that provides runtime utilities to be used with Lunifera OSGi Subsystems framework.</description>
	<packaging>pom</packaging>

	<properties>
		<lunifera.aggregator.name>lunifera-runtime-utils</lunifera.aggregator.name>
		<license.copyrightOwners>C4biz Softwares ME, Loetz KG</license.copyrightOwners>
	</properties>

	<url>${distribution.site.url}</url>
	<distributionManagement>
		<site>
			<id>gh-pages</id>
			<name>Lunifera GitHub Pages</name>
			<url>${distribution.site.url}</url>
		</site>
	</distributionManagement>
	<scm>
		<!-- convention is that the repository's name be the same as the aggregator 
			name -->
		<connection>${lunifera.scm.connection}</connection>
		<developerConnection>${lunifera.scm.connection.dev}</developerConnection>
		<url>${lunifera.scm.url}</url>
		<tag>HEAD</tag>
	</scm>

	<modules>
		<module>org.lunifera.runtime.utils.pom.mbp</module>
		<module>org.lunifera.runtime.utils.aether</module>
		<module>org.lunifera.runtime.utils.osgi</module>
		<module>org.lunifera.runtime.utils.paxexam</module>
		<module>org.lunifera.runtime.utils.zookeeper</module>
	</modules>
</project>
